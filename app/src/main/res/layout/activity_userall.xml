<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic4"
    tools:openDrawer="start"
    tools:context=".userallActivity">
    <include
        layout="@layout/app_bar_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/ideas"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:textSize="25sp"
            android:text="IDEAS"
            app:backgroundTint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/centres"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="44dp"
            android:text="COLLECTION CENTRES"
            android:textSize="20sp"
            app:backgroundTint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ideas" />

        <Button
            android:id="@+id/shops"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:text="SHOPS"
            android:textSize="25sp"
            app:backgroundTint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/items" />

        <Button
            android:id="@+id/items"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            android:text="ITEMS"
            android:textSize="25sp"
            app:backgroundTint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/centres" />


    </androidx.constraintlayout.widget.ConstraintLayout>
